<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 1em">
    <a class="navbar-brand" href="/">TinyApp</a>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/urls/new">Create New TinyURL</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/urls">Show all URLs</a>
        </li>
      </ul>
    </div>
    <% if(email) { %>
      <form class="form-inline" action="/logout" method="POST">
        <span class="nav-item mr-sm-2">Logged In As: <%= email %>!</span>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
      </form>
      <% } else { %>
        <form class="form-inline" action="/login" method="POST">
          <input class="form-control mr-sm-2" type="text" placeholder="Username" name="username">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
        </form>
      <% } %>
  </nav>
</header>